# Global Settings
PROJECT_NAME=twitter-clone
ENVIRONMENT=development

# Database
DB_HOST=db
DB_PORT=5432
DB_NAME=twitter_clone
DB_USER=twitter_user
DB_PASSWORD=twitter_password
DATABASE_URL=postgres://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# JWT Settings
JWT_SECRET_KEY=your-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME=3600
JWT_REFRESH_TOKEN_LIFETIME=604800

# Django
DEBUG=1
SECRET_KEY=your-secret-key
DJANGO_SETTINGS_MODULE=core.settings
DJANGO_SECRET_KEY=your-secret-key
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend deployment
REACT_APP_API_URL=http://localhost:8000/api/v1

# Email settings
EMAIL_HOST_USER=your_email@zoho.com
EMAIL_HOST_PASSWORD=your_zoho_app_password
DEFAULT_FROM_EMAIL=your_email@zoho.com

# Frontend URL for email verification and password reset links
FRONTEND_URL=http://localhost:3000

# Unsplash API for image usage
REACT_APP_UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# Django settings
PYTHONUNBUFFERED=1

# Database settings
POSTGRES_DB=twitter_clone
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres 